type User {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String! @unique
  email: String! @unique
  uploads: [Score!]! @relation(link: INLINE, name: "Ownerships")
  sharedWith: [Score!]! @relation(link: INLINE, name: "Shares")
  public: Boolean!
}

type Score {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  title: String!
  composer: String
  lyricist: String
  owner: User! @relation(name: "Ownerships")
  private: Boolean!
  sharedTo: [User!]! @relation(name: "Shares")
}